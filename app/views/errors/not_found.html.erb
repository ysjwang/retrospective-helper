<div class="h-screen w-screen bg-gradient-to-br from-gray-900 via-black to-gray-800 relative overflow-hidden fixed inset-0">
  <!-- Animated background grid -->
  <div class="absolute inset-0 opacity-20">
    <div class="grid grid-cols-12 gap-4 h-full">
      <% 12.times do |i| %>
        <div class="border-l border-red-400/30 animate-pulse" style="animation-delay: <%= i * 0.1 %>s;"></div>
      <% end %>
    </div>
  </div>


  <!-- Main content -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-screen px-4">
    <!-- Glowing 404 title -->
    <h1 class="text-8xl md:text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-400 via-red-300 to-orange-400 mb-8 text-center leading-tight">
      <span class="drop-shadow-2xl" style="text-shadow: 0 0 20px #ef4444, 0 0 40px #ef4444, 0 0 60px #ef4444;">404</span>
    </h1>

    <!-- Error message with neon effect -->
    <h2 class="text-2xl md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-red-300 via-red-200 to-orange-300 mb-6 text-center leading-tight">
      <span class="drop-shadow-2xl" style="text-shadow: 0 0 15px #ef4444, 0 0 30px #ef4444;">SESSION NOT FOUND</span>
    </h2>

    <!-- Subtitle with neon effect -->
    <p class="text-lg md:text-xl text-red-300 mb-8 text-center max-w-2xl leading-relaxed" style="text-shadow: 0 0 10px #ef4444;">
      The retrospective session you're looking for doesn't exist or has been deleted.
    </p>

    <!-- Error details -->
    <div class="bg-gray-800/50 border-2 border-red-400 rounded-lg p-6 mb-8 max-w-2xl w-full">
      <div class="text-red-300 font-mono text-sm text-center" style="text-shadow: 0 0 10px #ef4444;">
        <div class="mb-2">ERROR_CODE: 404_NOT_FOUND</div>
        <div class="mb-2">STATUS: SESSION_MISSING</div>
        <div class="mb-2">TIMESTAMP: <%= Time.current.strftime("%Y-%m-%d %H:%M:%S UTC") %></div>
        <div>SYSTEM: RETRO_HELPER_V1.0</div>
      </div>
    </div>

    <!-- Action buttons -->
    <div class="flex flex-col sm:flex-row gap-4 mb-8">
      <!-- Back to Home Button -->
      <%= link_to root_path, class: "group relative px-8 py-4 bg-gradient-to-r from-lime-600 to-lime-500 hover:from-lime-500 hover:to-lime-400 text-black font-bold text-lg rounded-lg transform transition-all duration-300 hover:scale-105 hover:shadow-2xl border-2 border-lime-400" do %>
        <span class="relative z-10 tracking-wider" style="text-shadow: 0 0 10px #000000;">
          ‚Üê BACK TO HOME
        </span>
      <% end %>

      <!-- Start New Session Button -->
      <%= form_with url: retrospective_sessions_path, method: :post, local: true, class: "inline-block" do %>
        <button type="submit" class="group relative px-8 py-4 bg-gradient-to-r from-gray-700 to-gray-600 hover:from-gray-600 hover:to-gray-500 text-red-300 font-bold text-lg rounded-lg transform transition-all duration-300 hover:scale-105 hover:shadow-2xl border-2 border-gray-500">
          <span class="relative z-10 tracking-wider" style="text-shadow: 0 0 10px #000000;">
            START NEW SESSION
          </span>
        </button>
      <% end %>
    </div>

    <!-- Decorative elements -->
    <div class="mt-16 flex space-x-8">
      <div class="w-4 h-4 bg-red-400 rounded-full animate-ping"></div>
      <div class="w-4 h-4 bg-orange-500 rounded-full animate-ping" style="animation-delay: 0.5s;"></div>
      <div class="w-4 h-4 bg-yellow-500 rounded-full animate-ping" style="animation-delay: 1s;"></div>
    </div>
  </div>

  <!-- Bottom neon line -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-red-400 to-transparent"></div>
</div>

<style>

  /* Glitch effect for 404 */
  @keyframes glitch {
    0% { transform: translate(0); }
    20% { transform: translate(-2px, 2px); }
    40% { transform: translate(-2px, -2px); }
    60% { transform: translate(2px, 2px); }
    80% { transform: translate(2px, -2px); }
    100% { transform: translate(0); }
  }

  .glitch-effect {
    animation: glitch 0.3s infinite;
  }
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Add glitch effect to 404 text
  const errorTitle = document.querySelector('h1');
  if (errorTitle) {
    setInterval(() => {
      errorTitle.classList.add('glitch-effect');
      setTimeout(() => {
        errorTitle.classList.remove('glitch-effect');
      }, 300);
    }, 2000);
  }
});
</script>
